{
  "name": "@novemberborn/as-i-preach",
  "version": "8.0.0",
  "description": "Like standard, but with support for new syntax and AVA rules, to @novemberborn's taste",
  "main": "index.js",
  "bin": {
    "as-i-preach": "cli.js"
  },
  "files": [
    ".eslintrc.js",
    "cli.js",
    "index.js",
    "options.js",
    "lib"
  ],
  "scripts": {
    "coverage": "nyc npm test",
    "lint": "eslint --ignore-pattern 'test/fixtures/**/*.js' --ignore-path .gitignore .",
    "test": "ava",
    "posttest": "npm run lint",
    "postpublish": "greenkeeper-postpublish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/novemberborn/as-i-preach.git"
  },
  "author": "Mark Wubben (https://novemberborn.net/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/novemberborn/as-i-preach/issues"
  },
  "homepage": "https://github.com/novemberborn/as-i-preach#readme",
  "dependencies": {
    "arrify": "^1.0.1",
    "eslint": "3.19.0",
    "eslint-config-standard": "7.1.0",
    "eslint-formatter-pretty": "^1.1.0",
    "eslint-plugin-ava": "4.2.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-node-globals": "0.1.0",
    "eslint-plugin-promise": "3.5.0",
    "eslint-plugin-react": "6.10.3",
    "eslint-plugin-standard": "2.1.1",
    "eslint-plugin-unicorn": "2.1.1",
    "has-flag": "^2.0.0",
    "resolve-from": "^2.0.0",
    "standard-engine": "7.0.0"
  },
  "devDependencies": {
    "ava": "^0.18.0",
    "coveralls": "^2.11.14",
    "get-stream": "^3.0.0",
    "greenkeeper-postpublish": "^1.0.0",
    "nyc": "^10.0.0"
  },
  "engines": {
    "node": ">=4"
  },
  "nyc": {
    "cache": true,
    "exclude": [
      "scripts/*",
      "test/**/*"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  }
}
