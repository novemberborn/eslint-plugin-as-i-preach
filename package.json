{
  "name": "@novemberborn/as-i-preach",
  "version": "6.2.0",
  "description": "Like standard, but with support for new syntax and AVA rules, to @novemberborn's taste",
  "main": "index.js",
  "bin": {
    "as-i-preach": "cli.js"
  },
  "files": [
    ".eslintrc.js",
    "cli.js",
    "index.js",
    "options.js",
    "lib"
  ],
  "scripts": {
    "coverage": "nyc npm test",
    "lint": "scripts/eslint.js --ignore-pattern 'test/fixtures/**/*.js' --ignore-path .gitignore .",
    "test": "scripts/ava.js",
    "posttest": "npm run lint",
    "postpublish": "greenkeeper-postpublish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/novemberborn/as-i-preach.git"
  },
  "author": "Mark Wubben (https://novemberborn.net/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/novemberborn/as-i-preach/issues"
  },
  "homepage": "https://github.com/novemberborn/as-i-preach#readme",
  "dependencies": {
    "arrify": "^1.0.1",
    "eslint": "3.9.1",
    "eslint-config-standard": "6.2.1",
    "eslint-formatter-pretty": "^1.1.0",
    "eslint-plugin-ava": "3.1.1",
    "eslint-plugin-babel": "3.3.0",
    "eslint-plugin-import": "2.0.1",
    "eslint-plugin-node-globals": "0.1.0",
    "eslint-plugin-promise": "3.3.0",
    "eslint-plugin-react": "6.7.1",
    "eslint-plugin-standard": "2.0.1",
    "eslint-plugin-unicorn": "1.0.0",
    "find-root": "^1.0.0",
    "has-flag": "^2.0.0",
    "pkg-config": "^1.1.1",
    "resolve-from": "^2.0.0",
    "standard-engine": "5.1.1"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "coveralls": "^2.11.14",
    "get-stream": "^3.0.0",
    "greenkeeper-postpublish": "^1.0.0",
    "nyc": "^8.3.2"
  },
  "engines": {
    "node": ">=4"
  },
  "nyc": {
    "cache": true,
    "exclude": [
      "node_modules/**/*",
      "scripts/*",
      "test/**/*"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  }
}
